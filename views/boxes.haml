    #big_graph_title
    #big_graph
    #big_graph_events
    .pull-left
      %a#source_link{:title => "original source"}
        %i.icon-share
      %a#source_download{:title => "data"}
        %i.icon-download
      %a#toggle_events{:title => "toggle events"}
        %i.icon-exclamation-sign.on
